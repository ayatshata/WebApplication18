@page
@model MughtaribatHouse.Pages.IndexModel
@{
    ViewData["Title"] = "بيت المقتربات - الرئيسية";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
        }

        .welcome-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-top: 100px;
        }

        #health-status {
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card welcome-card">
                    <div class="card-body text-center p-5">
                        <h1 class="display-4 text-primary mb-4">🏠 بيت المقتربات</h1>
                        <p class="lead mb-4">نظام إدارة مساكن الطلاب والموظفين</p>

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <div class="alert alert-success">
                                <h4>مرحبا بك، @User.Identity?.Name!</h4>
                                <p>يمكنك الآن استخدام النظام بالكامل</p>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6 mb-3">
                                    <a href="/Residents" class="btn btn-primary btn-lg w-100">إدارة المقيمين</a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <a href="/Payments" class="btn btn-success btn-lg w-100">المدفوعات</a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <a href="/Documents" class="btn btn-info btn-lg w-100">الوثائق</a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <a href="/hangfire" class="btn btn-warning btn-lg w-100">لوحة الإدارة</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">تسجيل الدخول</h5>
                                            <p class="card-text">يجب تسجيل الدخول للوصول إلى النظام</p>
                                            <div class="d-grid gap-2">
                                                <a href="/Identity/Account/Login" class="btn btn-primary btn-lg">تسجيل الدخول</a>
                                                <a href="/Identity/Account/Register" class="btn btn-outline-secondary btn-lg">إنشاء حساب</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="mt-5">
                            <div class="row">
                                <div class="col-md-4">
                                    <a href="/health" class="btn btn-success btn-sm">فحص الحالة يدويًا</a>
                                    <div id="health-status"></div>
                                </div>
                                <div class="col-md-4">
                                    <a href="/debug/tables" class="btn btn-info btn-sm">فحص الجداول</a>
                                </div>
                                <div class="col-md-4">
                                    <a href="/hangfire" class="btn btn-warning btn-sm">لوحة Hangfire</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // فحص تلقائي لحالة السيرفر
        async function checkHealth() {
            const statusEl = document.getElementById("health-status");
            statusEl.innerHTML = "⏳ جاري الفحص...";
            try {
                const res = await fetch("/health");
                if (res.ok) {
                    statusEl.innerHTML = "✅ السيرفر يعمل بشكل طبيعي";
                    statusEl.style.color = "green";
                } else {
                    statusEl.innerHTML = "⚠️ السيرفر متصل لكن الحالة غير مستقرة";
                    statusEl.style.color = "orange";
                }
            } catch {
                statusEl.innerHTML = "❌ لا يمكن الاتصال بالسيرفر";
                statusEl.style.color = "red";
            }
        }

        // تشغيل الفحص عند تحميل الصفحة
        document.addEventListener("DOMContentLoaded", checkHealth);
    </script>
</body>
</html>
