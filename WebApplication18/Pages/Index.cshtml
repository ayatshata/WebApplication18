@page
@model MughtaribatHouse.Pages.IndexModel
@{
    ViewData["Title"] = "دار الزهور للمغتربات - الرئيسية";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(rgba(255,182,193,0.5), rgba(255,240,245,0.7)), url('/images/bg-flowers.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(255, 255, 255, 0.3);
                z-index: 0;
            }

        .welcome-card {
            position: relative;
            z-index: 1;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 25px;
            box-shadow: 0 10px 30px rgba(255, 105, 180, 0.3);
            margin-top: 80px;
            padding: 40px;
        }

        .logo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #ffb6c1;
            margin-bottom: 20px;
            background-color: white;
        }

        .main-title {
            color: #d63384;
            font-weight: 800;
        }

        .lead {
            color: #7a1f50;
        }

        .btn-primary {
            background-color: #ff69b4;
            border-color: #ff69b4;
        }

            .btn-primary:hover {
                background-color: #ff85c1;
                border-color: #ff85c1;
            }

        .btn-success {
            background-color: #ff94c2;
            border-color: #ff94c2;
            color: #fff;
        }

            .btn-success:hover {
                background-color: #ff74ad;
                border-color: #ff74ad;
            }

        .btn-info {
            background-color: #ffc0cb;
            border-color: #ffc0cb;
            color: #7a1f50;
        }

            .btn-info:hover {
                background-color: #ffb6c1;
                border-color: #ffb6c1;
                color: #fff;
            }

        .btn-warning {
            background-color: #ffb6c1;
            border-color: #ffb6c1;
            color: #7a1f50;
        }

            .btn-warning:hover {
                background-color: #ff8fb1;
                border-color: #ff8fb1;
                color: #fff;
            }

        .btn-outline-secondary {
            color: #ff69b4;
            border-color: #ff69b4;
        }

            .btn-outline-secondary:hover {
                color: white;
                background-color: #ff69b4;
                border-color: #ff69b4;
            }

        #health-status {
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container text-center position-relative" style="z-index:1;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card welcome-card">
                    <div class="card-body">

                   
                        <img src="~/images/logo.png.jpeg" alt="شعار دار الزهور" class="logo" />
                        <h1 class="display-5 main-title mb-3">🌸 دار الزهور للمغتربات 🌸</h1>
                        <p class="lead mb-4">نظام إدارة مساكن الطالبات والموظفات</p>

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <div class="alert alert-success shadow-sm">
                                <h4>مرحبًا بكِ، @User.Identity?.Name!</h4>
                                <p>يمكنكِ الآن استخدام النظام بشكل كامل</p>
                            </div>

                            <div class="row mt-4">
                                <div class="col-md-6 mb-3">
                                    <a asp-controller="Residents" asp-action="Index" class="btn btn-primary btn-lg w-100">إدارة المقيمات</a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <a asp-controller="Payments" asp-action="Index" class="btn btn-success btn-lg w-100">المدفوعات</a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <a asp-controller="Docs" asp-action="Index" class="btn btn-info btn-lg w-100">الوثائق</a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <a href="/hangfire" class="btn btn-warning btn-lg w-100">لوحة الإدارة</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card border-0 shadow-sm mt-4">
                                <div class="card-body">
                                    <h5 class="card-title text-primary">تسجيل الدخول</h5>
                                    <p class="card-text">يُرجى تسجيل الدخول للوصول إلى النظام</p>
                                    <div class="d-grid gap-2">
                                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">تسجيل الدخول</a>
                                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-lg">إنشاء حساب جديد</a>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="mt-5">
                            <div class="row">
                                <div class="col-md-4">
                                    <a href="/health" class="btn btn-success btn-sm">فحص الحالة يدويًا</a>
                                    <div id="health-status"></div>
                                </div>
                                <div class="col-md-4">
                                    <a href="/debug/tables" class="btn btn-info btn-sm">فحص الجداول</a>
                                </div>
                                <div class="col-md-4">
                                    <a href="/hangfire" class="btn btn-warning btn-sm">لوحة Hangfire</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function checkHealth() {
            const statusEl = document.getElementById("health-status");
            statusEl.innerHTML = "⏳ جاري الفحص...";
            try {
                const res = await fetch("/health");
                if (res.ok) {
                    statusEl.innerHTML = "✅ السيرفر يعمل بشكل طبيعي";
                    statusEl.style.color = "green";
                } else {
                    statusEl.innerHTML = "⚠️ السيرفر متصل لكن الحالة غير مستقرة";
                    statusEl.style.color = "orange";
                }
            } catch {
                statusEl.innerHTML = "❌ لا يمكن الاتصال بالسيرفر";
                statusEl.style.color = "red";
            }
        }
        document.addEventListener("DOMContentLoaded", checkHealth);
    </script>
</body>
</html>
